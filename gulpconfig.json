{
	"styles": {
		"site": [{
			"src": "./src/scss/Site/styles.scss",
			"dest": {
				"paths": [
					"./www/app/webroot/css",
					"./html/css"
				],
				"filename": "site.min.css"
			},
			"watch": [
				"./src/scss/Site/**/*.scss",
				"./src/scss/Site/*.scss"
			]
		}],
		"admin": [{
			"src": "./src/scss/Admin/admin.scss",
			"dest": {
				"paths": [
					"./www/app/View/Themed/Admin/webroot/css"
				],
				"filename": "admin.min.css"
			},
			"watch": [
				"./src/scss/Admin/**/*"
			]
		}, {
			"src": "./src/scss/Admin/wysiwyg.scss",
			"dest": {
				"paths": [
					"./www/app/View/Themed/Admin/webroot/css"
				],
				"filename": "wysiwyg.min.css"
			},
			"watch": [
				"./src/scss/Admin/wysiwyg.scss"
			]
		}]
	},
	"scripts": {
		"site": [{
			"name": "site.js",
			"src": "./src/js/Site/**/*.js",
			"dest": {
				"paths": [
					"./www/app/webroot/js",
					"./html/js"
				],
				"filename": "site.min.js"
			},
			"watch": [
				"./src/js/Site/**/*"
			]
		}],
		"admin": [{
			"name": "admin.js",
			"src": "./src/js/Admin/**/*.js",
			"dest": {
				"paths": [
					"./www/app/View/Themed/Admin/webroot/js"
				],
				"filename": "admin.min.js"
			},
			"watch": [
				"./src/js/Admin/**/*"
			]
		}]
	}
}
